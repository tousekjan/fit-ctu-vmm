{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "incremental": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "types": ["jest", "react", "node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es5", "es6", "es7", "es2017.object"],
    "baseUrl": "./src",
    "paths": {
      "assets/*": ["assets/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "features/*": ["features/*"],
      "constants/*": ["constants/*"],
      "locale/*": ["locale/*"],
      "routes/*": ["routes/*"],
      "gql/*": ["gql/*"]
    },
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
